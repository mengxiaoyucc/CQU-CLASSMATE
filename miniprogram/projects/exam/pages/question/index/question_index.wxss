@import "../../../style/skin.wxss";

.main {
	width: 100%;
	height: 100vh;
	padding: 30rpx 20rpx;
}

.info-box {
	width: 100%;
	background-color: #fff;
	border-radius: 40rpx;
	padding: 40rpx 80rpx;
	height: 100%;
	display: flex;
	flex-direction: column;
	padding-top: 100rpx;
	justify-content: flex-start;
}

.info-box .num {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 50rpx 0;
	margin-bottom: 50rpx;
}

.info-box .num .title {
	font-size: 36rpx;
	margin-bottom: 30rpx;
}

.info-box .num .size {
	font-size: 26rpx;
	color: #999;
}

.info-box .num>input {
	font-size: 40rpx;
	text-align: center;
	margin-top: 30rpx;
	border-radius: 6rpx;
	height: 80rpx;
	border-bottom: 2rpx solid #ccc;
	width: 130rpx;
}


.info-box .submit {
	font-size: 30rpx;
	width: 100%;
	background-color: var(--projectColor);
	padding: 20rpx 20rpx;
	margin-bottom: 40rpx;
	border-radius: 80rpx;
	text-align: center;
	color: #fff;
}

.hover {
	opacity: .8;
	transform: scale(.95, .95);
}